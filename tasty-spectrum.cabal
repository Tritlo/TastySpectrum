common warnings
    ghc-options: -Wall

library
    -- Base language which the package is written in.
    exposed-modules: Test.Tasty.Ingredients.Spectrum,
                     Test.Tasty.Ingredients.Spectrum.GenForest,
                     Test.Tasty.Ingredients.Spectrum.Types,
                     Test.Tasty.Ingredients.Spectrum.ParseCSV,
                     Test.Tasty.Ingredients.Spectrum.SBFL

    hs-source-dirs: app/

    build-depends:    base >=4 && < 5,
                      tasty,
                      containers,
                      tagged,
                      stm,
                      hpc,
                      optparse-applicative,
                      text,
                      ghc

executable tasty-sbfl
  default-language: Haskell2010
  main-is: app/Main.hs
  build-depends: base >= 4 && < 5,
                 tasty-spectrum,
                 hpc,
                 containers,
                 optparse-applicative


test-suite TastySpectrum-test
    -- Import common warning flags.
    import:           warnings

    -- Base language which the package is written in.

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- The interface type and version of the test suite.
    type:             exitcode-stdio-1.0

    -- Directories containing source files.
    hs-source-dirs:   test

    -- The entrypoint to the test suite.
    main-is:          Main.hs

    -- Test dependencies.
    build-depends:    base ^>=4.14,
                      tasty,
                      tasty-quickcheck,
                      tasty-hunit,
                      tasty-spectrum
